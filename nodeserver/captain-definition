        "RUN python3 -m ensurepip",
        "RUN pip3 install --no-cache --upgrade pip setuptools",
        "RUN mkdir -p /app",
        "COPY . /app"
        "WORKDIR /app",
        "RUN ls /app",
        "RUN npm install",
        "ENV NODE_ENV production",
        "ENV PORT 3000",
        "EXPOSE 3000",
        "CMD [ \"npm\", \"build\" ]",
